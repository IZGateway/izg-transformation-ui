{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "types": [
      "cypress",
      "@types/gtag.js"
    ],
    "target": "ES2017"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "./jest-setup.ts",
    "logger.ts",
    ".next/types/**/*.ts",
    "cypress/support/commands.ts"
  ],
  "exclude": [
    "node_modules",
    "cypress",
    "**/*.cy.tsx",
    ".next"
  ]
}
