user nginx;

error_log /var/log/nginx/error.log warn;
pid /var/run/nginx.pid;

events {}

http {
    include /etc/nginx/mime.types;

    # Add HSTS header globally
    add_header Strict-Transport-Security "max-age=63072000" always;

    log_format main '$remote_addr - $remote_user [$time_local] "$request" '
                    '$status $body_bytes_sent "$http_referer" '
                    '"$http_user_agent" "$http_x_forwarded_for"';

    access_log /var/log/nginx/access.log main;

    sendfile on;

    server {
        listen 443 ssl;
        server_name localhost;

        # SSL configuration
        # TODO - this is likely different than the cert used to communicate w/ backend service
        ssl_certificate ${XFORM_SERVICE_ENDPOINT_CRT_PATH};
        ssl_certificate_key ${XFORM_SERVICE_ENDPOINT_KEY_PATH};
        # TODO - uncomment when done troubleshootin
        #ssl_dhparam /etc/nginx/ssl/dhparam.pem;

        ssl_protocols TLSv1.2 TLSv1.3;
        ssl_prefer_server_ciphers on;

        # FIPS-compatible cipher suites (aligned with ELBSecurityPolicy-TLS13-1-2-Res-FIPS-2023-04)
        ssl_ciphers 'ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA384:ECDHE-ECDSA-CHACHA20-POLY1305:ECDHE-RSA-CHACHA20-POLY1305';
        ssl_ecdh_curve secp256r1:secp384r1;

        # Additional security headers
        ssl_session_timeout 1d;
        ssl_session_cache shared:SSL:10m;
        ssl_session_tickets off;

        # OCSP Stapling
        ssl_stapling on;
        ssl_stapling_verify on;

        location / {
            proxy_pass http://localhost:3000;
            proxy_http_version 1.1;
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection 'upgrade';
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            proxy_cache_bypass $http_upgrade;
        }
    }
}
